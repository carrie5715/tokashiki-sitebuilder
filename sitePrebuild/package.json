{
  "name": "siteprebuild",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "sass:dev": "sass --watch src/scss/common.scss:public/css/common.css src/scss/styles.scss:public/css/styles.css",
    "sass:build": "sass src/scss/common.scss:public/css/common.css src/scss/styles.scss:public/css/styles.css",
    "dev": "npm run sass:dev & vite",
    "build": "npm run sass:build && node scripts/build_templates.js",
    "style:dev": "chokidar 'src/scss/**/*.scss' 'public/css/**/*.css' -c \"node scripts/run_direct_locked.js\" -t 500 --initial",
    "watch:js": "chokidar 'public/js/**/*.js' -c \"node scripts/run_direct_locked.js\" -t 500 --initial",
    "watch:templates": "chokidar 'src/components/**/*' 'src/layout/**/*' 'src/pages/**/*' -c \"node scripts/run_direct_locked.js\" -t 500 --initial",
    "preview": "npm run style:dev & npm run watch:js & npm run watch:templates",
    "direct": "npm run build && node scripts/direct_copy.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "chokidar-cli": "^3.0.0",
    "eslint": "^9.34.0",
    "fs-extra": "^11.3.2",
    "prettier": "^3.6.2",
    "sass": "^1.91.0",
    "vite": "^7.1.3"
  }
}
